<%= form_with(model: location, local: true) do |form| %>
  <div class="container justify-content-center text-center">
    <div class="field form-group">
      <h5><%= form.label :Nom %> *</h5>
      <p><%= form.text_field :name %></p>
    </div>
    <div class="field form-group">
      <h5><%= form.label :Adresse %> *</h5>
      <p><%= form.text_field :address1 %></p>
    </div>
    <div class="field form-group">
      <h5><%= form.label :Adresse %> *</h5>
      <p><%= form.text_field :address2 %></p>
    </div>
    <div class="field form-group">
      <h5><%= form.label :CodePostal %> *</h5>
      <p><%= form.text_field :postal_code %></p>
    </div>
    <div class="field form-group">
      <h5><%= form.label :Ville %> *</h5>
      <p><%= form.text_field :City %></p>
    </div>
    <div class="field form-group">
      <h5><%= form.label :Pays %> *</h5>
      <p><%= form.text_field :country %></p>
    </div>  
        <div class="field form-group">
      <h5><%= form.label :Téléphone %> *</h5>
      <p><%= form.text_field :phone %></p>
    </div>                  

    <div class="actions">
      <%= form.submit "Enregistrer", class: "btn btn-outline-primary" %>
    </div>
  </div>  
<% end %>
