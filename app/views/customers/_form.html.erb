<%= form_with(model: [@location, customer], local: true) do |form| %>

  <div class="container justify-content-center text-center">
      <div class="field form-group">
        <h5><%= form.label :Prénom %> *</h5>
        <p><%= form.text_area :first_name, placeholder: "Votre prènom" %></p>
      </div>
        <div class="field form-group">
        <h5><%= form.label :Nom %> *</h5>
        <p><%= form.text_area :last_name, placeholder: "Votre nom" %></p>
      </div>
        <div class="field form-group">
        <h5><%= form.label :Téléphone %> *</h5>
        <p><%= form.text_area :phone, placeholder: "0677777775" %></p>
        <span class="text-conditions-generales">Le numéro de téléphone doit contenir 10 chiffres</span>
      </div>
      <div class="actions">
        <%= form.submit "Enregistrer", class: "btn btn-primary" %>
      </div>
    </div>
<% end %>
