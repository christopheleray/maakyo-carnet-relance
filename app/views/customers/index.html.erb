<p id="notice"><%= notice %></p>

<div class="container">
  <h1 class="text-center">Liste des clients</h1>

<div class="row">
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Etablissement</th>
        <th scope="col">Prénom</th>
        <th scope="col">Nom</th>
        <th scope="col">Téléphone</th>
        <th scope="col">Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.location.name %></td>
          <td><%= customer.first_name%></td>
          <td><%= customer.last_name%></td>
          <td><%= customer.phone%></td>
          <td><%= customer.created_at%></td>
          <td><%= link_to 'Modifier', edit_location_customer_path(@location, customer), :class => "btn btn-info" %></td>
          <td><%= link_to 'Supprimer', [@location, customer], method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <div>
  <%= link_to 'Nouveau client', new_location_customer_path(@location), :class => "btn btn-primary" %>
  </div>
</div>