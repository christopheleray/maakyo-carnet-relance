<p id="notice"><%= notice %></p>

<h1>Liste des clients </h1>

<table>
  <thead>
    <tr>
      <th>Etablissement</th>
      <th>Prénom</th>
      <th>Nom</th>
      <th>Téléphone</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.location.name %></td>
        <td><%= customer.first_name%></td>
        <td><%= customer.last_name%></td>
        <td><%= customer.phone%></td>
        <td><%= customer.created_at%></td>
        <td><%= link_to 'Show location', [@location] %></td>
        <td><%= link_to 'Edit', edit_location_customer_path(@location, customer) %></td>
        <td><%= link_to 'Destroy location', [@location, customer], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer', new_location_customer_path(@location) %>
