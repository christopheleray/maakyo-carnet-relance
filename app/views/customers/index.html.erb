<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Liste des clients</h1>

  <table>
    <thead>
      <tr>
        <th>Etablissement</th>
        <th>Prénom</th>
        <th>Nom</th>
        <th>Téléphone</th>
        <th>Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.location.name %></td>
          <td><%= customer.first_name%></td>
          <td><%= customer.last_name%></td>
          <td><%= customer.phone%></td>
          <td><%= customer.created_at%></td>
          <td><%= link_to 'Voir', [@location] %></td>
          <td><%= link_to 'Modifier', edit_location_customer_path(@location, customer) %></td>
          <td><%= link_to 'Supprimer', [@location, customer], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nouveau client', new_location_customer_path(@location) %>
</div>